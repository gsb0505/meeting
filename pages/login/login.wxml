<!--pages/login/login.wxml-->
<view class="login">
    <image src="../../images/logo.png" ></image>
    <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="section">
            <input name="userId"  type="text" maxlength="11" placeholder="请输入用户名" />
            <input name="loginPSW"  type="text" password  maxlength="100" placeholder="请输入密码" />
        </view>
        <view class="error">{{errorMsg}}</view>
        <view class="error">{{netStatus}}</view>
        <button  formType="submit" hover-class="other-button-hover"> 登录 </button>
    </form>
</view>