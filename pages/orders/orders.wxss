/* pages/orders/orders.wxss */
.ordersTab{
    position: fixed;
    top:0;
    font-size: 28rpx;
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    line-height: 80rpx;
    z-index:10;
    margin-bottom: 90rpx;
}
.ordersTab wx-text{
    text-align:center;
    width:16%;
    display:block;
    float:left;

}
.ordersRoom{
    margin-bottom: 30rpx;
    background-color: #fff;
    padding:10rpx;
    height:200rpx;
    border-top:1px solid #ddd;
    border-bottom:1px solid #ddd;
}
.roomLeft{
    float:left;
}
.roomLeft wx-text{
    display:block;
    line-height:46rpx;
}
.roomBut{
    float:right;
}

.roomBut wx-text {
    display:block;
    box-sizing:border-box;
    font-size:13px;
    text-align:center;
    text-decoration:none;
    line-height:60rpx;
    border-radius:5px;
    -webkit-tap-highlight-color:transparent;
    overflow:hidden;
    color:#fff;
    background-color:#be9d6d;
    width:140rpx;
    height:60rpx;
    border:1px solid #be9d6d;
    margin-bottom:14rpx;
}
.seatBut wx-text {
    display:block;
    box-sizing:border-box;
    font-size:13px;
    text-align:center;
    text-decoration:none;
    line-height:60rpx;
    border-radius:5px;
    -webkit-tap-highlight-color:transparent;
    overflow:hidden;
    color:#fff;
    background-color:#be9d6d;
    width:140rpx;
    height:60rpx;
    border:1px solid #be9d6d;
    margin-bottom:14rpx;
}
.tabCalled{
    width:13.5%;
    height:2px;
    background-color:#be9d6d;
    position: absolute;
    bottom:0;
    -webkit-transition:left .15s; /* Safari */
            transition:left .15s;
}
.ordersTitle{
    text-align: center;
    margin-top: 200rpx;
    font-size:16px;
    color:#666;
}

